{
  "$schema": "http://json-schema.org/draft-07/schema",
  "$id": "ChestDescriptor",
  "allOf": [
    {
      "$ref": "#/$defs/Entity"
    }
  ],
  "type": "object",
  "properties": {
    "Type": {
      "$ref": "#/$defs/ChestType"
    },
    "InteractDistance": {
      "type": "integer"
    },
    "LockInteractTime": {
      "type": "string",
      "format": "TimeSpan",
      "default": "00:00:00"
    },
    "DropInfo": {
      "type": "object",
      "properties": {
        "Items": {
          "type": "array",
          "items": {
            "$ref": "#/$defs/itemInfo"
          }
        },
        "Currency": {
          "$ref": "#/$defs/Currency"
        },
        "CraftMaterials": {
          "type": "array",
          "items": {
            "$ref": "#/$defs/itemInfo"
          }
        }
      },
      "required": [
        "Items",
        "Currency",
        "CraftMaterials"
      ]
    }
  },
  "$defs": {
    "itemInfo": {
      "type": "object",
      "properties": {
        "LootTable": {
          "type": "string"
        },
        "DropPercent": {
          "type": "integer"
        }
      }
    },
    "Entity": {
      "$schema": "https://json-schema.org/draft/2020-12/schema",
      "$id": "Entity",
      "type": "object",
      "x-abstract": true,
      "properties": {
        "Id": {
          "type": "string"
        }
      },
      "required": [
        "Id"
      ]
    },
    "ChestType": {
      "$schema": "https://json-schema.org/draft/2020-12/schema",
      "$id": "ChestType",
      "enum": [
        "None",
        "Common",
        "Rare",
        "Exotic",
        "Epic",
        "Legendary"
      ]
    },
    "Range": {
      "$schema": "https://json-schema.org/draft/2020-12/schema",
      "x-id": "Range",
      "type": "object",
      "x-csharp-generic-parameter": "T",
      "properties": {
        "Min": {
          "type": "number"
        },
        "Max": {
          "type": "number"
        }
      }
    },
    "Currency": {
      "$schema": "https://json-schema.org/draft/2020-12/schema",
      "$id": "Currency",
      "type": "object",
      "properties": {
        "Amount": {
          "$ref": "#/$defs/Range"
        },
        "ExpiriencePercent": {
          "type": "integer"
        }
      }
    }
  },
  "required": [
    "LockInteractTime",
    "DropInfo"
  ]
}